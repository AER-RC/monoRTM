#!

#   Script to run monortm examples

\rm MONORTM.IN
set prefix = ""

echo 'prefix for output files: ' $prefix

#---------------------------------------------------------------------
#---------------------------------------------------------------------
# create monortm output files: MONORTM.OUT and MONORTM.LOG

echo "---------------------------------------------------------------------"
echo "---------------------------------------------------------------------"
echo "---------------------------------------------------------------------"
echo "---------------------------------------------------------------------"
echo " case1 :downwelling; U.S. Standard atmosphere; input: in/MONORTM.IN_MDL_ATM_dn"

ln -s in/MONORTM.IN_MDL_ATM_dn        MONORTM.IN

time ../monortm_v3.2_pgf90_sgl

\rm   MONORTM.IN
mv    MONORTM.OUT     out/$prefix{MONORTM.OUT_MDL_ATM_dn}
mv    MONORTM.LOG     out/$prefix{MONORTM.LOG_MDL_ATM_dn}
mv    TAPE7           out/$prefix{MONORTM.TAPE7_MDL_ATM_dn}

#---------------------------------------------------------------------
#---------------------------------------------------------------------
# create monortm output files: MONORTM.OUT and MONORTM.LOG

echo "---------------------------------------------------------------------"
echo "---------------------------------------------------------------------"
echo "---------------------------------------------------------------------"
echo " case2 :upwelling; U.S. Standard atmosphere; input: in/MONORTM.IN_MDL_ATM_up"

ln -s in/MONORTM.IN_MDL_ATM_up        MONORTM.IN

time ../monortm_v3.2_pgf90_sgl

\rm   MONORTM.IN
mv    MONORTM.OUT     out/$prefix{MONORTM.OUT_MDL_ATM_up}
mv    MONORTM.LOG     out/$prefix{MONORTM.LOG_MDL_ATM_up}
mv    TAPE7           out/$prefix{MONORTM.TAPE7_MDL_ATM_up}

#---------------------------------------------------------------------
#---------------------------------------------------------------------
# create monortm output files: MONORTM.OUT and MONORTM.LOG

echo "---------------------------------------------------------------------"
echo "---------------------------------------------------------------------"
echo "---------------------------------------------------------------------"
echo "---------------------------------------------------------------------"
echo " case3 :downwelling; user-defined atmosphere; input: in/MONORTM.IN_NOSCALE_INP1_dn"

ln -s in/MONORTM.IN_NOSCALE_INP1_dn        MONORTM.IN

time ../monortm_v3.2_pgf90_sgl

\rm   MONORTM.IN
mv    MONORTM.OUT     out/$prefix{MONORTM.OUT_NOSCALE_INP1_dn}
mv    MONORTM.LOG     out/$prefix{MONORTM.LOG_NOSCALE_INP1_dn}
mv    TAPE7           out/$prefix{MONORTM.TAPE7_NOSCALE_INP1_dn}

#---------------------------------------------------------------------
#---------------------------------------------------------------------
# create monortm output files: MONORTM.OUT and MONORTM.LOG
echo "---------------------------------------------------------------------"
echo "---------------------------------------------------------------------"
echo "---------------------------------------------------------------------"
echo "---------------------------------------------------------------------"
echo " case4 :downwelling; ascii sonde input; input: in/MONORTM.IN_NOSCALE_INP2_dn"

ln -s in/MONORTM.IN_NOSCALE_INP2_dn        MONORTM.IN
ln -s in/ARM.IN_sav	                           ARM.IN

time ../monortm_v3.2_pgf90_sgl

\rm   MONORTM.IN
\rm   ARM.IN
mv    MONORTM.OUT     out/$prefix{MONORTM.OUT_NOSCALE_INP2_dn}
mv    MONORTM.LOG     out/$prefix{MONORTM.LOG_NOSCALE_INP2_dn}
mv    TAPE7           out/$prefix{MONORTM.TAPE7_NOSCALE_INP2_dn}

#---------------------------------------------------------------------
#---------------------------------------------------------------------
# create monortm output files: MONORTM.OUT and MONORTM.LOG
echo "---------------------------------------------------------------------"
echo "---------------------------------------------------------------------"
echo "---------------------------------------------------------------------"
echo "---------------------------------------------------------------------"
echo " case5 :downwelling; TAPE7 style input; input: in/MONORTM.IN_NOSCALE_INP3_dn"

ln -s in/MONORTM.IN_NOSCALE_INP3_dn        MONORTM.IN
ln -s in/MONORTM_PROF.IN_sav               MONORTM_PROF.IN

time ../monortm_v3.2_pgf90_sgl

\rm   MONORTM.IN
\rm   MONORTM_PROF.IN
mv    MONORTM.OUT     out/$prefix{MONORTM.OUT_NOSCALE_INP3_dn}
mv    MONORTM.LOG     out/$prefix{MONORTM.LOG_NOSCALE_INP3_dn}

#---------------------------------------------------------------------
#---------------------------------------------------------------------
# create monortm output files: MONORTM.OUT and MONORTM.LOG
echo "---------------------------------------------------------------------"
echo "---------------------------------------------------------------------"
echo "---------------------------------------------------------------------"
echo "---------------------------------------------------------------------"
echo " case6 :downwelling; user-defined atmosphere with scaled H2O; input: in/MONORTM.IN_SCALE_INP1_MODEL0_HMOL1_dn"

ln -s in/MONORTM.IN_SCALE_INP1_MODEL0_HMOL1_dn        MONORTM.IN

time ../monortm_v3.2_pgf90_sgl

\rm   MONORTM.IN
mv    MONORTM.OUT     out/$prefix{MONORTM.OUT_SCALE_INP1_MODEL0_HMOL1_dn}
mv    MONORTM.LOG     out/$prefix{MONORTM.LOG_SCALE_INP1_MODEL0_HMOL1_dn}
mv    TAPE7           out/$prefix{MONORTM.TAPE7_SCALE_INP1_MODEL0_HMOL1_dn}

#---------------------------------------------------------------------
#---------------------------------------------------------------------
# create monortm output files: MONORTM.OUT and MONORTM.LOG
echo "---------------------------------------------------------------------"
echo "---------------------------------------------------------------------"
echo "---------------------------------------------------------------------"
echo "---------------------------------------------------------------------"
echo " case7 :downwelling; ascii sonde atmosphere with scaled H2O; input: in/MONORTM.IN_SCALE_INP2_HMOL1_dn"

ln -s in/MONORTM.IN_SCALE_INP2_HMOL1_dn        MONORTM.IN
ln -s in/ARM.IN_sav                            ARM.IN

time ../monortm_v3.2_pgf90_sgl

\rm   MONORTM.IN
\rm   ARM.IN
mv    MONORTM.OUT     out/$prefix{MONORTM.OUT_SCALE_INP2_HMOL1_dn}
mv    MONORTM.LOG     out/$prefix{MONORTM.LOG_SCALE_INP2_HMOL1_dn}
mv    TAPE7           out/$prefix{MONORTM.TAPE7_SCALE_INP2_HMOL1_dn}

#---------------------------------------------------------------------
#---------------------------------------------------------------------
# create monortm output files: MONORTM.OUT and MONORTM.LOG
echo "---------------------------------------------------------------------"
echo "---------------------------------------------------------------------"
echo "---------------------------------------------------------------------"
echo "---------------------------------------------------------------------"
echo " case8 :downwelling; TAPE7-style input with scaled H2O; input: in/MONORTM.IN_SCALE_INP3_HMOL1_dn"

ln -s in/MONORTM.IN_SCALE_INP3_HMOL1_dn        MONORTM.IN
ln -s in/MONORTM_PROF.IN_sav                   MONORTM_PROF.IN

time ../monortm_v3.2_pgf90_sgl

\rm   MONORTM.IN
\rm   MONORTM_PROF.IN
mv    MONORTM.OUT     out/$prefix{MONORTM.OUT_SCALE_INP3_HMOL1_dn}
mv    MONORTM.LOG     out/$prefix{MONORTM.LOG_SCALE_INP3_HMOL1_dn}

#---------------------------------------------------------------------
#---------------------------------------------------------------------
# create monortm output files: MONORTM.OUT and MONORTM.LOG




#




